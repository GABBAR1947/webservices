<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="plugin" group="system" method="upgrade">
    <name>PLG_SYSTEM_WEBSERVICES</name>
    <author>redCOMPONENT</author>
    <creationDate>April 2015</creationDate>
    <copyright>Copyright (C) 2008 - 2015 redCOMPONENT.com. All rights reserved.</copyright>
    <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
    <authorEmail>email@redcomponent.com</authorEmail>
    <authorUrl>www.redcomponent.com</authorUrl>
    <version>1.0.0</version>
    <description>PLG_SYSTEM_WEBSERVICES_XML_DESCRIPTION</description>

    <files>
        <filename plugin="webservices">webservices.php</filename>
    </files>

    <languages folder="language">
        <language tag="en-GB">en-GB/en-GB.plg_system_webservices.ini</language>
        <language tag="en-GB">en-GB/en-GB.plg_system_webservices.sys.ini</language>
    </languages>

    <config>
        <fields name="params">
            <fieldset name="basic">
                <field
                        name="enable_webservices"
                        type="list"
                        default="0"
                        label="PLG_SYSTEM_WEBSERVICES_WEBSERVICES_ENABLE_WEBSERVICES"
                        description="PLG_SYSTEM_WEBSERVICES_WEBSERVICES_ENABLE_WEBSERVICES_DESC">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field
                        name="webservices_default_format"
                        type="list"
                        default="json"
                        label="PLG_SYSTEM_WEBSERVICES_WEBSERVICES_DEFAULT_FORMAT"
                        description="PLG_SYSTEM_WEBSERVICES_WEBSERVICES_DEFAULT_FORMAT_DESC">
                    <option value="json">JSON</option>
                    <option value="xml">XML</option>
                </field>
                <field
                        name="webservices_default_page_authorization"
                        type="list"
                        default="0"
                        label="PLG_SYSTEM_WEBSERVICES_WEBSERVICES_DEFAULT_PAGE_AUTHORIZATION"
                        description="PLG_SYSTEM_WEBSERVICES_WEBSERVICES_DEFAULT_PAGE_AUTHORIZATION_DESC">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field
                        name="webservices_permission_check"
                        type="list"
                        default="1"
                        label="PLG_SYSTEM_WEBSERVICES_WEBSERVICES_PERMISSION_CHECK"
                        description="PLG_SYSTEM_WEBSERVICES_WEBSERVICES_PERMISSION_CHECK_DESC">
                    <option value="0">PLG_SYSTEM_WEBSERVICES_WEBSERVICES_PERMISSION_CHECK_SCOPE</option>
                    <option value="1">PLG_SYSTEM_WEBSERVICES_WEBSERVICES_PERMISSION_CHECK_JOOMLA</option>
                </field>
                <field
                        name="debug_webservices"
                        type="list"
                        default="0"
                        label="PLG_SYSTEM_WEBSERVICES_WEBSERVICES_ENABLE_DEBUG"
                        description="PLG_SYSTEM_WEBSERVICES_WEBSERVICES_ENABLE_DEBUG_DESC">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field
                        name="enable_soap"
                        type="list"
                        default="0"
                        label="PLG_SYSTEM_WEBSERVICES_SOAP_ENABLE_SOAP"
                        description="PLG_SYSTEM_WEBSERVICES_SOAP_ENABLE_SOAP_DESC">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>
